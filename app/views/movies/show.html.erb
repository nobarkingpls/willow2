<p style="color: green"><%= notice %></p>
<p style="color: green"><%= notice %></p>

<%= render @movie %>

<p>Rights --></p>

<% @movie.rights.each do |right| %>
      <p>
        <strong>Country:</strong>
        <%= Country.find(right.country_id).code %>
      </p>

      <p>
        <strong>Start:</strong>
        <%= right.start %>
      </p>

      <p>
        <strong>Finish:</strong>
        <%= right.finish %>
      </p>
<% end %>

<p>Genres --></p>
  
<% @movie.categories.each do |category| %>
      <p>
        <strong>Name:</strong>
        <%= category.genre.name %>
      </p>
<% end %>

<p>Ratings --></p>

<% @movie.classifications.each do |classification| %>
      <p>
        <strong>Name:</strong>
        <%= classification.rating.code %>
      </p>
<% end %>

<p>Advisories --></p>

<% @movie.advisories.each do |advisory| %>
      <p>
        <strong>Name:</strong>
        <%= advisory.reason.code %>
      </p>
<% end %>

<p>Actors --></p>

<% @movie.casts.each do |cast| %>
      <p>
        <strong>Name:</strong>
        <%= cast.actor.name %>
      </p>
<% end %>

<div>
  <%= link_to "Edit this movie", edit_movie_path(@movie) %> |
  <%= link_to "Back to movies", movies_path %>

  <%= button_to "Destroy this movie", @movie, method: :delete %>
</div>